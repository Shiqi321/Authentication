<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authentication.Mapper.EmailTokenMapper">
    <resultMap id="EmailTokenResultMap" type="com.authentication.Model.EmailToken" >
        <result column="tokenId" property="tokenId" jdbcType="VARCHAR" />
        <result column="userId" property="userId" jdbcType="VARCHAR" />
        <result column="token" property="token" jdbcType="VARCHAR" />
        <result column="expiration" property="expiration" jdbcType="BIGINT" />
        <result column="type" property="type" jdbcType="INTEGER" />
    </resultMap>

    <select id="getExpiration" resultMap="EmailTokenResultMap">
        select tokenId, userId, token, expiration, type
        from EmailTokenInfo
        where userId = #{userId} and token = #{token}
    </select>


    <insert id = "insertEmailToken" parameterType = "com.authentication.Model.EmailToken">
        insert
        into EmailTokenInfo (tokenId, userId, token, expiration, type)
        values (#{tokenId}, #{userId}, #{token}, #{expiration}, #{type})
    </insert>

</mapper>